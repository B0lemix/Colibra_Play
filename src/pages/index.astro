---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import Portada from "../components/Portada.astro";
import Row from "../components/Row.astro";
import "../styles/global.css";



const getPhotos = async () => {
  const response = await fetch("https://jsonplaceholder.typicode.com/photos");
  const data = await response.json();
 return data.slice(0, 10); // Obtiene los primeros 10 objetos del array
};

const photos = await getPhotos();

---

<Layout title="Colibra Play">
  <main class="w-full h-screen">
    <Header />
    <Portada data={photos} />
  
    <Row title="Popular en Colibra Play" data={photos} />

    <Row title="Documentales" data={photos} />

    <Row title="Radio Online" data={photos} />

    <Row title="Videos a la carta" data={photos} />

    <Footer />
  </main>
</Layout>
