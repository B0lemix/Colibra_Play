---
import ContentCard from "./ContentCard.astro";

interface Props {
  data: {
    contentId: string;
    type: string;
    title: string;
    description: string;
    contentUrl: string;
    genre: string;
    duration: string;
    thumbnailUrl: string;
  }[];
  title: string;

}

const { data, title } = Astro.props;
---

<div class="px-4 md:px-12 mt-4 space-y-8">
  <div>
    <p class="text-white text-md md:text-xl lg:text-2xl font-semibold mb-4">
      {title}
    </p>

    <div class="grid grid-cols-4 gap-2">
      {data.map((content) =>( <ContentCard  data={content} />))}
    </div>
  </div>
</div>
