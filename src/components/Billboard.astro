---
import BotonReproducir from "./BotonReproducir.astro";
import BotonInformacion from "./BotonInformacion.astro";

interface Props {
  data: {
    contentId: string;
    type: string;
    title: string;
    description: string;
    contentUrl: string;
    genre: string;
    duration: string;
    thumbnailUrl: string;
  };
}

const { data } = Astro.props;
---

<section class="lg:relative lg:h-[56.25vw] relative h-[65vh]">
  <video
    class="w-full lg:h-[56.25vw] h-[65vh] aspect-auto object-cover brightness-[60%]"
    autoplay
    muted
    loop
    poster={data?.thumbnailUrl}
    src={data?.contentUrl}></video>

  <div class="absolute top-[45%] lg:top-[40%] md:top-[40%] ml-4 md:ml-16">
    <p
      class="text-white text-2xl md:text-5xl h-full w-[50%] lg:text-6xl font-bold drop-shadow-xl"
    >
      {data?.title}
    </p>

    <p
      class="text-white text-[12px] md:text-lg mt-3 md:mt-8 w-[80%] md:w-{80%] lg:w-[50%] drop-shadow-xl"
    >
      {data?.description}
    </p>
    <div class="flex flex-row items-center mt-3 md:mt-4 gap-1">
      <BotonReproducir ContentId={data.contentId} />
      <BotonInformacion ContentId={data.contentId} />
    </div>
  </div>
</section>
